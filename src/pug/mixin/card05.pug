// https://github.com/pugjs/pug/issues/1693

mixin card05()
  - var slots = {};
  
  // general mixin slot
  mixin slot(name)
    - slots[name] = block
    
  block
  
  .card05.bg-white
    if slots['header']
      .title.text-white.p-4(style="background: #C3C7C8")
        .d-flex.justify-content-between.align-items-center
          .h4.m-0
            i.fas.fa-circle.mr-3
            - slots['header'](); 
          i.fas.fa-minus
    if slots['body']
      .body.p-5
        - slots['body']();
         
         
