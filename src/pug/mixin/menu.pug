-
  var menu = {
    type: 'tab',
    activeIndex: 0,
    items: [
      {
        name: '最新消息',
        link: '/'
      },
      {
        name: '公益資訊',
        link: '/'
      },
      {
        name: '建案進度',
        link: '/'
      }
    ]
  }

mixin menu(opt)

  
  - opt = opt || menu
    
  if(opt.type == 'tab')
    .menu.tab(class="bg-white")
      ul.d-flex.p-0.m-0
        each item, idx in opt.items
          li.d-flex(class=(opt.activeIndex == idx ? 'active' : ''))
            a(href=item.link class="px-4 py-3")=item.name
