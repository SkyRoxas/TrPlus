-
  var menu = {
    type: 'tab',
    activeIndex: 0,
    items: [
      {
        name: '最新消息',
        link: '/'
      },
      {
        name: '公益資訊',
        link: '/'
      },
      {
        name: '建案進度',
        link: '/'
      }
    ]
  }

mixin menu(opt)

  
  - opt = opt || menu
  - activeIndex = opt.activeIndex || 0
  
  if(opt.type == 'menu')
    .menu
      ul.d-flex.justify-content-between.p-0.m-0
        each item, idx in opt.items
          li.d-flex(class=(activeIndex == idx ? 'active' : ''))
            a(href=item.link class="px-2 py-3 text-white " style="white-space: nowrap;")=item.name
    
  if(opt.type == 'tab')
    .menu.tab(class="bg-white")
      ul.d-flex.p-0.m-0
        each item, idx in opt.items
          li.d-flex(class=(activeIndex == idx ? 'active' : ''))
            a(href=item.link class="px-4 py-3")=item.name

  if(opt.type == 'drop')
    .d-flex.bg-secondary.justify-content-between
      nav.navbar.navbar-expand-lg.navbar-light.text-white.p-0
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            each item, idx in opt.items
              if(item.align == "left")
                li.nav-item.dropdown
                  a#navbarDropdown.nav-link.dropdown-toggle.text-white.p-3(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                    | !{item.name}
                  .dropdown-menu.m-0.border-0.bg-primary(aria-labelledby="navbarDropdown")
                    each subItem, subIdx in opt.items[idx].subs
                      a.dropdown-item.text-white(href="#") !{subItem.name}
                      .dropdown-divider
      ul.mb-0
          each item, idx in opt.items
           if(item.align == "right")
             ul.bg-secondary
               li.nav-item.dropdown.d-block
                 a#navbarDropdown.nav-link.dropdown-toggle.text-white.p-3(href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                   | !{item.name}
                 .dropdown-menu.m-0.dropdown-menu-right.border-0.bg-primary(aria-labelledby="navbarDropdown")
                   each subItem, subIdx in opt.items[idx].subs
                     a.dropdown-item.text-white(href="#") !{subItem.name}
                     .dropdown-divider
    
          

      
              
