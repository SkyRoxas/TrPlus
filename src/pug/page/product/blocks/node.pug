include ../../../mixin/tab


-
  var productTabs = [
    {
      name: 'doc',
      label: '商品描述'
    },
    {
      name: 'rate',
      label: '滿額最高享 12 期 0 利率'
    },
    {
      name: 'payMethod',
      label: '付款方式及免運門檻'
    },
    {
      name: 'state',
      label: '貨況查詢'
    }
  ]

mixin productTab()
  +tab(productTabs)
    +slot('doc')
      .container.p-0
        .row
          .col-12.col-xl-6
            .body
              p 
                | 尺寸：長 300 x 寬 200 x 高 200
                br
                | (單位：公分)
              
              ul
                li 日本精緻公益免組裝，即買即用 四層抽屜收納櫃，大容量抽屜
                li 超靜音貼紙劃歸，使用順暢
                li 封閉式櫃體
          .col-12.col-xl-6
            p.label 特規商品延伸費用
            .container.p-0
              .row.mb-3
                .col
                  .p-2.text-center.bg-white
                    .mb-2 超材計費
                    .price.small +$100
                .col
                  .p-2.text-center.bg-white
                    .mb-2 超重計費
                    .price.small +$100
                .col
                  .p-2.text-center.bg-white
                    .mb-2 安裝費
                    .price.small +$100
            .link.d-flex.align-items-center.justify-content-center
              i.h4.question.fas.fa-question-circle.mr-3
              a.h4(href='/') 偏遠地區／登高費用查詢
    +slot('rate')
      p 滿額最高享 12 期 0 利率
    +slot('payMethod')
      p 付款方式及免運門檻
    +slot('state')
      p 貨況查詢    


