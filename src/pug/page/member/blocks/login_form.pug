.login_form_block
    .form_wrapper
        img(src="./images/LoginPageLogo.png", alt="", width="360")
        .vip_link
            a.h3.mb-0(href="/") 住戶VIP專區
        form(action="", method="")
            .field_wrap.h3
                label(for="username") 帳號
                input#username(type="text", name="username")
